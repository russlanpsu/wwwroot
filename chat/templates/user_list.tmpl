<ul id="user_list">
{% for user in users %}
    <li class="user_item" id="{{ user.id }}" user-name="{{ user.name }}">

            <div style="position: relative; display: inline-block;">
            {% if user.avatar_url %}
                <img src="{{user.avatar_url}}"style="width: 32px;">
            {% else %}
                <img src="img\user.png"style="width: 32px;">
            {% endif %}
            <img src="img/online.png" class="user_online" style="display: none;">
            </div>
        <span> {{ user.name }} </span><span class="msg_count"></span>
        <div class="last_msg">{{ user.last_msg }}</div>
    </li>
{% endfor %}
</ul>